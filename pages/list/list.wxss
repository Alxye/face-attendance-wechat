/* pages/list/list.wxss */
/**index.wxss**/
.search-input {
    background-color: #F7F7F7;
    font-size: 26rpx;
    padding: 0rpx 30rpx;
    border-radius: 30rpx;
    width: 100%;
    height: 100%;
  }
/* 最外层view, 左右结构 */
  .list-item {
    width: 100%;
    padding: 20rpx;
    box-sizing: border-box;
    min-height: 180rpx;
    display: flex;
    align-items: center;
  }
  .item-left {
    flex: 1;
  }
  .item-info {
    display: flex;
    align-items: center;
    font-size: 20rpx;
    margin-bottom: 10rpx;
  }

  .item-right{
    width: 150rpx;
    height: 100rpx;
    background-color: teal;
    margin-left: 20rpx;
    border-radius: 10rpx;
    overflow: hidden;
  }
  .item-cover {
    width: 100%;
    height: 100%;
  }

  .item-order {
    width: 50rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    border-radius: 4rpx;
    margin-right: 16rpx;
    color: #B8741A;
    background-color: #FAF2EC;
  }
  .item-hot {
    color: #C0C3CC;
  }
  .item-title {
    font-size: 28rpx;
  }